<?xml version="1.0" encoding="utf-8" standalone="no"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/inset_large"
        android:paddingBottom="@dimen/inset_large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/about_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold_font"
            android:textSize="@dimen/text_normal"
            android:layout_marginStart="@dimen/inset_xsmall"
            android:onClick="@{() -> aboutInfoListViewModel.navigateToDetailView()}"
            android:layout_marginEnd="@dimen/inset_xsmall"
            android:text="@{aboutInfoListViewModel.aboutInfoTitle}"
            android:textColor="@color/primary_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="MissingPrefix" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <variable
            name="aboutInfoListViewModel"
            type="com.mydesignerclothing.mobile.android.about.viewmodel.AboutInfoListAdapterViewModel" />

    </data>
</layout>
