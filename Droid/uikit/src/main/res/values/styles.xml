<resources>

    <style name="Widget.App.ActionBar"  parent="Base.Widget.App.ActionBar">
        <item name="background">@color/action_bar_background</item>
    </style>

    <style name="Widget.App.ActionBar.WithNoHomeAsUp"  parent="Base.Widget.App.ActionBar.WithNoHomeAsUp">
        <item name="background">@color/action_bar_background</item>
    </style>

    <style name="Base.Widget.App.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="displayOptions">showHome|showTitle|homeAsUp</item>
    </style>

    <style name="Base.Widget.App.ActionBar.WithNoHomeAsUp" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="displayOptions">showHome|showTitle</item>
    </style>

    <style name="App.PrimaryBackgroundNoLogo" parent="">
        <item name="android:background">@drawable/background</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="Widget.App.TextView.Primary.xSmall">
        <item name="android:textSize">@dimen/text_xsmall</item>
    </style>

    <style name="Widget.App.TextView.Primary" parent="">
        <item name="android:fontFamily">@font/default_font</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Widget.App.TextView.ErrorLabel" parent="Widget.App.TextView.Primary.xSmall">
        <item name="android:textColor">@color/label_text_error</item>
    </style>

    <style name="Widget.App.TextView.Label" parent="Widget.App.TextView.Primary.xSmall">
        <item name="android:textColor">@color/label_text_default</item>
    </style>

    <style name="Widget.App.Loader" parent="">
        <item name="android:fontFamily">@font/default_font</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Widget.App.Loader.Primary">
        <item name="android:textColor">@color/primary_button_text_disabled</item>
    </style>

    <style name="Widget.App.Loader.Primary.Normal">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="Widget.App.TextView.Description.Inverse.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Widget.App.TextView.Description.Inverse" parent="">
        <item name="android:fontFamily">@font/default_font</item>
        <item name="android:textSize">@dimen/text_xsmall</item>
        <item name="android:textColor">@color/primary_description_text_inverse</item>
        <item name="android:textColorLink">@color/action_bar_background</item>
    </style>

    <style name="Widget.App.Include.ProductDetail" parent="">
        <item name="android:fontFamily">@font/default_font</item>
        <item name="android:layout_marginEnd">@dimen/inset_large</item>
        <item name="android:layout_marginStart">@dimen/inset_small</item>
        <item name="android:layout_marginTop">@dimen/inset_xlarge</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.App.Carousel.Primary" parent="">
        <item name="android:fontFamily">@font/default_font</item>
        <item name="android:layout_marginEnd">@dimen/inset_large</item>
        <item name="android:layout_marginStart">@dimen/inset_large</item>
        <item name="android:layout_marginTop">@dimen/inset_xlarge</item>
        <item name="android:background">
            @drawable/white_chicklet_bottom_rounded_corners_without_padding
        </item>
        <item name="android:paddingBottom">@dimen/offset_normal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.App.ImageView.AddLogo" parent="">
        <item name="android:fontFamily">@font/default_font</item>
        <item name="android:layout_width">@dimen/add_promo_view_size</item>
        <item name="android:layout_height">@dimen/add_promo_view_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginEnd">@dimen/inset_small</item>
        <item name="android:layout_marginTop">@dimen/add_promo_view_inset_top</item>
        <item name="android:src">@drawable/background</item>
    </style>

    <style name="Widget.App.ImageView.Voucher" parent="">
        <item name="android:fontFamily">@font/default_font</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Widget.App.ImageView.Checkout.Promo.Tint" parent="">
        <item name="android:fontFamily">@font/default_font</item>
        <item name="android:tint">@color/primary_button_disabled</item>
    </style>

    <style name="App.Dialog.FullScreen" parent="Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">@dimen/full_screen_dialog_width</item>
        <item name="android:windowMinWidthMinor">@dimen/full_screen_dialog_width</item>
    </style>

    <style name="EditText">
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
