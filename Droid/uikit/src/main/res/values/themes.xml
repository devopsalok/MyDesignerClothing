<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.App" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/default_font</item>
        <item name="appScreenBackground">@style/App.PrimaryBackgroundNoLogo</item>
        <item name="actionBarStyle">@style/Widget.App.ActionBar</item>
    </style>

    <style name="Theme.App" parent="Base.Theme.App">
        <item name="android:fontFamily">@font/default_font</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="buttonPrimary">@style/Widget.App.Button.Primary</item>
        <item name="buttonSecondary">@style/Widget.App.Button.Secondary</item>
        <item name="rectangleButton">@style/Widget.App.Button.Rectangle</item>
        <item name="editTextPrimaryNoBackground">@null</item>
        <item name="textDetailsPrimaryBase">@style/Widget.App.TextView.Primary.xSmall</item>
        <item name="textErrorPrimaryBase">@style/Widget.App.TextView.ErrorLabel</item>
        <item name="textDescriptionPrimaryInverse1x">@style/Widget.App.TextView.Description.Inverse.Small</item>
        <item name="includeProductDetailMargins">@style/Widget.App.Include.ProductDetail</item>
        <item name="carouselPromo">@style/Widget.App.Carousel.Primary</item>
        <item name="imageAddPromo">@style/Widget.App.ImageView.AddLogo</item>
        <item name="imageVoucher">@style/Widget.App.ImageView.Voucher</item>
        <item name="productDetailPromoImage">@style/Widget.App.ImageView.Checkout.Promo.Tint</item>
    </style>

    <style name="Theme.App.NoActionBar">
        <item name="android:fontFamily">@font/default_font</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.App.BlueBackgroundNoLogo">
        <item name="android:fontFamily">@font/default_font</item>
        <item name="android:windowBackground">@drawable/primary_background_no_logo</item>
        <item name="actionBarStyle">@style/Widget.App.ActionBar.WithNoHomeAsUp</item>
    </style>

    <style name="Theme.App.BlueBackgroundWithLogo">
        <item name="android:fontFamily">@font/default_font</item>
        <item name="android:windowBackground">@drawable/primary_background_no_logo</item>
    </style>

    <style name="Widget.App.Button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:paddingLeft">@dimen/offset_xxsmall</item>
        <item name="android:paddingRight">@dimen/offset_xxsmall</item>
    </style>

    <style name="Widget.App.Button.Primary">
        <item name="android:textColor">@drawable/primary_button_text</item>
        <item name="android:background">@drawable/primary_button</item>
    </style>

    <style name="Widget.App.Button.Secondary">
        <item name="android:textColor">@drawable/primary_button_text</item>
        <item name="android:background">@drawable/secondary_button</item>
    </style>

    <style name="Widget.App.Button.Rectangle">
        <item name="android:textColor">@drawable/primary_button_text</item>
        <item name="android:background">@drawable/rectangle_button</item>
    </style>

    <style name="Theme.App.Translucent">
        <item name="android:fontFamily">@font/default_font</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Note that we use the base animation style here (that is no
             animations) because we really have no idea how this kind of
             activity will be used. -->
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Theme.App.Translucent.NoTitleBar">
        <item name="android:fontFamily">@font/default_font</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>